<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="boschshc"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:thing="https://openhab.org/schemas/thing-description/v1.0.0"
	xsi:schemaLocation="https://openhab.org/schemas/thing-description/v1.0.0 https://openhab.org/schemas/thing-description-1.0.0.xsd">

    <!-- Bosch Bridge -->
    <bridge-type id="shc">
        <label>Bosch Smart Home Controller</label>
        <description></description>

        <config-description>
            <parameter name="ipAddress" type="text">
                <context>network-address</context>
                <label>Network Address</label>
                <description>Network address of the Bosch Smart Home Controller.</description>
                <required>true</required>
            </parameter>
            <parameter name="password" type="text">
                <label>Network Address</label>
                <description>Network address of the Bosch Smart Home Controller.</description>
                <required>true</required>
            </parameter>
            <parameter name="keystorePath" type="text">
                <label>Java KeyStore path.</label>
                <description>Path at which the keystore with SHC acceess keys is stored.</description>
                <required>true</required>
            </parameter>                        
        </config-description>
    </bridge-type>

	<!--Bosch in-wall switch-->
	<thing-type id="in-wall-switch">
		<label>Bosch in-wall switch</label>
		<description>In-wall switch for light control</description>

		<channels>
			<channel id="power-switch" typeId="power-switch" />
		</channels>

		<config-description>
			<parameter name="id" type="text" required="true">
				<label>Device ID</label>
				<description>Device ID of the in-wall switch</description>
                <required>true</required>
			</parameter>
		</config-description>

	</thing-type>

	<!-- Sample Channel Type: ["PowerMeter","PowerSwitch","PowerSwitchProgram","Routing"] -->
	<channel-type id="power-switch">
		<item-type>Switch</item-type>
		<label>Bosch Power Switch</label>
		<description>In-Wall Bosch Power Switch</description>
	</channel-type>

</thing:thing-descriptions>
